<p id="notice"><%= notice %></p>

<p>
  <strong>会社名:</strong>
  <%= @company.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company.projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= link_to 'Edit', edit_company_project_path(company_id: @company.id, id: project.id) %></td>
          <td><%= link_to 'Destroy', company_project_path(company_id: @company.id, id: project.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Project', new_company_project_path(@company) %> |
<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', root_url %>
